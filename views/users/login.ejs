<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
	<h1 class="col-6 offset-4">Login on Wanderlust</h1>
	<div class="col-4 offset-4">
		<form action="/login" method="post" class="needs-validation" novalidate>
			<div class="mb-3">
				<br>
				<label for="username" class="form-label">Username</label>
				<input name = "username" type="text" id="username" class="form-control" required></input>
			</div>

			<div class="mb-3">
				<label for="password" class="form-label">Password</label>
				<input name = "password" type="password" id="password" class="form-control" required></input>
			</div>

			<div class="col-12">
				<div class="form-check">
				  <input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
				  <label class="form-check-label" for="invalidCheck2">
					Agree to terms and conditions
				  </label>
				</div>
			  </div> 
			<br>

			<button class="btn btn-success">Login</button>
		</form>
	</div>
</div>